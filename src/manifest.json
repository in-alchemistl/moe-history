{
    "name": "Picture History",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_icon": {
            "16": "assets/icon16.png",
            "48": "assets/icon48.png",
            "128": "assets/icon128.png"
        },
        "default_title": "Picture History Options"
    },
    "icons": {
        "16": "assets/icon16.png",
        "48": "assets/icon48.png",
        "128": "assets/icon128.png"
    },
    "options_page": "options/index.html",
    "background": {
        "service_worker": "background.ts"
    },
    "content_scripts": [{
        "js": ["content-scripts/content-scripts.ts"],
        "matches": ["<all_urls>"]
    }]
}
